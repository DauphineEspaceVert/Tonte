  <div class="zone" id="zone1">
    <h3>Allée des tilleuls</h3>
    <p>Date de tonte : <span id="date1">—</span></p>
    <textarea placeholder="Commentaire..." id="comment1"></textarea><br>
    <button onclick="updateZone('date1', 'comment1')">Tondue aujourd’hui</button>
  </div>

  <div class="zone" id="zone2">
    <h3>Bosquet nord</h3>
    <p>Date de tonte : <span id="date2">—</span></p>
    <textarea placeholder="Commentaire..." id="comment2"></textarea><br>
    <button onclick="updateZone('date2', 'comment2')">Tondue aujourd’hui</button>
  </div>

  <script>
    function updateZone(dateId, commentId) {
      const today = new Date().toLocaleDateString();
      document.getElementById(dateId).innerText = today;
      const comment = document.getElementById(commentId).value;
      console.log(`Zone mise à jour : ${dateId}, Commentaire : ${comment}`);
      // Ici tu pourrais envoyer les données vers un fichier ou une base
    }
  </script>
